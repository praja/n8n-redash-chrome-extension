{
    "manifest_version": 3,
    "name": "Redash AI Query Generator",
    "version": "0.1.1",
    "description": "Generate SQL queries using AI on Redash's new query page",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/queries/new"
            ],
            "js": [
                "marked.min.js",
                "config.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}